{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "@types/mocha",
      "@types/chai"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src",
  ],
  "exclude": [
    "__tests__"
  ]
}
